
<body style="background-color: lightgray;">
<div class="container">
  
<div class="row justify-content-center mb-2">
  <%= render "shared/error", artical: artical %>
<div class="col-10 shadow p-4 mb-3 bg-info rounded">
<%= form_with(model: artical, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= form.text_field :title , class: "form-control shadow rounded", placeholder: "Enter Articals title here " %>
    </div>
    </div>
  <div class="form-group row mt-3">
    <%= form.label :description, class: "col-2 col-form-label text-light" %>
 
    <div class="col-10">
    <%= form.text_area :description, rows: 10, class: "form-control shadow rounded" , placeholder: "Enter Articals description here " %>
  </div>
  </div>
  <div class="form-group justify-content-center text-center mt-2">
    <%= form.submit class: "btn btn-outline-light btn-lg text-black" %>
  </div>
<% end %>
</div>
</div>
</div>
</body>