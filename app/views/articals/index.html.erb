
<body style="background-color : lightgray;">
<h1 style="margin-top: 10px;" class="text-center">Articals listing Page</h1>

<div class="container">
  <div class="row">
    <% @articals.each do |artical| %>
      <div class="col-8 mb-4 justify-content-center mx-auto ">
        <div class="card h-100 text-center shadow  mb-2 bg-body rounded"> 
          <div class="card-header text-bg-secondary fst-italic">
            By Sagheer Ahmad
          </div>
          <div class="card-body">
            <h5 class="card-title "><%= link_to artical.title, artical, class: "text-success green-link" %></h5>
            <p class="card-text"><%= truncate(artical.description, length: 100) %></p>
            <div class="d-flex justify-content-center gap-2">
              <%= link_to "View", artical, class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_artical_path(artical), class: "btn btn-outline-info" %>
              <%= link_to "Delete", artical, method: :delete, class: "btn btn-outline-danger" %>
            </div>

        
          </div>
          <div class="card-footer text-muted  ">
            Posted on <%= artical.created_at.strftime("%B %d, %Y") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
